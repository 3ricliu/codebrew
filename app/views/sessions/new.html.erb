<%= flash[:errors].join("<br>").html_safe if flash[:errors] %>

<h2>Codebrew</h2>
<% if signed_in? %>
  <%= current_user.username %>
  <%= button_to "Sign Out", session_url, method: :delete %>
<% else %>
  <%= button_to "Sign In", new_session_url, method: :get %>
<% end %>


<h1>Codebrew</h1>
<h2>Sign In!</h2>

<form class="" action="<%= session_url %>" method="post">
  <%= render "/helpers/auth" %>

  <label for="username"> Username
    <input type="text" name="user[username]" value="">
  </label>
  <br>
  <label for="password"> Password
    <input type="password" name="user[password]" value="">
  </label>
  <br>
  <input type="submit" name="name" value="Sign In!">
</form>
